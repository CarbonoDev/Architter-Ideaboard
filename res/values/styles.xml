<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" >
        <item name="android:windowBackground">@color/app_bg</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
	    <item name="android:background">@drawable/nav_bg</item>
	    <item name="android:backgroundSplit">@drawable/nav_bg</item>
	    <item name="android:backgroundStacked">@drawable/nav_bg</item>
	</style>

    <style name="ImageButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ButtonSeparator">
        	<item name="android:layout_width">0.5dp</item>
        	<item name="android:layout_height">29.5dp</item>
            <item name="android:layout_marginRight">11.5dp</item>
            <item name="android:background">@drawable/button_separator</item>
    </style>

    <style name="SectionSeparator">
        	<item name="android:layout_width">fill_parent</item>
        	<item name="android:layout_height">0.5dp</item>
            <item name="android:background">@drawable/button_separator</item>
    </style>


    <style name="ButtonsBackground">
        	<item name="android:layout_width">fill_parent</item>
        	<item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/buttons_bg</item>
    </style>

    <style name="ArchiText">
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">"Trebuchet MS"</item>
        <item name="android:textSize">12sp</item>
    </style>
    

    <style name="actionText">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#919191</item>
    </style>
    
    <style name="IdeaDescriptionText" parent="ArchiText">
        <item name="android:layout_width">305dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    
    
    <style name="IdeaDescriptionTags" parent="@style/IdeaDescriptionText">
        <item name="android:textColor">#0067BF</item>
    </style>
    
    <style name="BorderedImage">
        <item name="android:paddingLeft" >0.5dp</item>
        <item name="android:paddingRight" >0.5dp</item>
        <item name="android:paddingBottom" >0.5dp</item>
        <item name="android:background">@drawable/container_bg_nr</item>
    </style>
    
    <style name="Container" >
        <item name="android:layout_width" >335.00dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft" >0.5dp</item>
        <item name="android:paddingRight" >0.5dp</item>
        <item name="android:paddingBottom" >0.5dp</item>
        <item name="android:background">@drawable/container_bg</item>
    </style>

    <style name="TopContainer" parent="@style/Container" >
        <item name="android:layout_height" >45.0dp</item>
        <item name="android:layout_marginTop" >-1.00dp</item>
    </style>
    
    <style name="InfoContainer" parent="@style/Container">
                <item name="android:layout_height" >fill_parent</item>
                <item name="android:orientation" >vertical</item>
    </style>
    
</resources>