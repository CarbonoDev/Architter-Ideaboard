<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" >
        <item name="android:windowBackground">@color/app_bg</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBar</item>
    </style>
    
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
	    <item name="android:background">@drawable/nav_bg</item>
	    <item name="android:backgroundSplit">@drawable/nav_bg</item>
	    <item name="android:backgroundStacked">@drawable/nav_bg</item>
	</style>
	
	<!-- style for the tabs -->
	<style name="ActionBarTabBar" parent="@android:style/Widget.Holo.ActionBar">
	    <item name="android:background">@drawable/actionbar_item_bg</item>
	</style>

</resources>